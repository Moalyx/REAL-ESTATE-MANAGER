<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="150dp"
    android:layout_height="150dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:src="@drawable/ic_launcher_background"

    android:layout_margin="1dp">

    <ImageView

        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="@drawable/ic_launcher_background"
        android:id="@+id/item_property_photo_detail"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@id/item_property_photo_detail"
        app:layout_constraintStart_toStartOf="@id/item_property_photo_detail"
        app:layout_constraintEnd_toEndOf="@id/item_property_photo_detail"
        android:text="GARDEN"
        android:textAlignment="center"
        android:textSize="25sp"
        android:textColor="#FFFFFF"
        android:background="#99000000"
        />

</androidx.constraintlayout.widget.ConstraintLayout>